<!--Emma Haynes 2-10-21-->

@model RestaurantsAssignment4.Models.Suggestions

<!--Form for inputting data-->

<form asp-action="Suggestions" method="post">
    <div>
        <label asp-for="Name">Name:</label>
        <input asp-for="Name" />
    </div>

    <div>
        <label asp-for="Restaurant">Restaurant Name:</label>
        <input asp-for="Restaurant" />
    </div>

    <div>
        <label asp-for="FavDish">Favorite Dish:</label>
        <input asp-for="FavDish" />
    </div>

    <div>
        <label asp-for="Phone">Phone:</label>
        <input asp-for="Phone" />
    </div>

    <button type="submit">Submit Your Application</button>

    <!--Print validation requriements-->
    <div asp-validation-summary="All"></div>


</form>